{
  "name": "graphql-inspector",
  "version": 2,
  "alias": ["graphql-inspector"],
  "env": {
    "LOG_FORMAT": "json",
    "LOG_LEVEL": "trace",
    "APP_ID": "@graphql-inspector-app-id",
    "PRIVATE_KEY": "@graphql-inspector-private-key",
    "WEBHOOK_SECRET": "@graphql-inspector-webhook-secret"
  },
  "build": {
    "env": {
      "SKIP_PREFLIGHT_CHECK": true
    }
  },
  "public": false,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "zeroConfig": false,
        "distDir": "website/build/graphql-inspector"
      }
    }
  ],
  "routes": [
    {
      "src": "/install",
      "status": 301,
      "headers": {"Location": "https://github.com/apps/graphql-inspector"}
    },
    { "src": "/(.*)", "dest": "website/build/graphql-inspector/$1" }
  ],
  "github": {
    "enabled": true,
    "silent": true
  }
}
